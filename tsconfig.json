{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "lib": ["es6"],                                      
    "module": "commonjs",                                
    "rootDir": "src",                                    
    "resolveJsonModule": true,                                                               
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "baseUrl": ".src/",
    "noImplicitReturns": true,
    "noImplicitThis": true,
  },
  "exclude": ["node_modules", "__tests", "build"],
}